{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    "group:allNonMajor",
    ":enableVulnerabilityAlertsWithLabel(High priority)"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "platformAutomerge": true,
  "prHourlyLimit": 0,
  "rebaseStalePrs": true,
  "dependencyDashboard": false,
  "pre-commit": {
    "enabled": true
  }
}
